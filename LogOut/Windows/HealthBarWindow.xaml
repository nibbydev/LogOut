<Window x:Class="LogOut.HealthBarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LogOut"
        mc:Ignorable="d"
        Title="HealthBarWindow" Height="60" Width="300" ResizeMode="NoResize" WindowStyle="None" Background="#66000000" Focusable="False" Topmost="True" BorderThickness="3" Foreground="{x:Null}" BorderBrush="#FF1D1D1D" AllowsTransparency="True" ShowInTaskbar="False">
    <Grid>
        <ProgressBar x:Name="ProgressBar_Main" Value="100" Background="#00E6E6E6" BorderThickness="3" BorderBrush="#FF2E2E2E">
            <ProgressBar.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFB00606" Offset="0"/>
                    <GradientStop Color="#FF6E0000" Offset="1"/>
                </LinearGradientBrush>
            </ProgressBar.Foreground>
        </ProgressBar>
    </Grid>
</Window>
