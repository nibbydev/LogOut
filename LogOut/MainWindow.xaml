<Window x:Class="LogOut.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LogOut"
        mc:Ignorable="d" Height="200" Width="525" Closing="Window_Closing" WindowStartupLocation="CenterScreen" MinWidth="270" MinHeight="200">
    <Grid>
        <TextBox x:Name="TextBox_Console" TextWrapping="Wrap" AllowDrop="False" VerticalScrollBarVisibility="Visible" IsReadOnly="True" IsUndoEnabled="False" FontFamily="Consolas" Margin="10,10,10,59"/>
        <Grid Height="38"  VerticalAlignment="Bottom" Background="White" >
            <Button x:Name="Button_SetHotkey" Content="Set hotkey" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="75" Click="Button_SetHotkey_Click" IsEnabled="False"/>
            <Button x:Name="Button_Settings" Content="Settings" HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Bottom" Width="75" Click="Button_Settings_Click"/>
        </Grid>

    </Grid>
</Window>
