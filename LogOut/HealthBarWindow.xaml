<Window x:Class="LogOut.HealthBarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LogOut"
        mc:Ignorable="d"
        Title="HealthBarWindow" Height="30" Width="150" ResizeMode="NoResize" ShowInTaskbar="False" IsHitTestVisible="False" WindowStyle="None" BorderThickness="2" Background="#FF5B5B5B" Focusable="False" Topmost="True">
    <Grid >
        <Rectangle x:Name="Rectangle" HorizontalAlignment="Left" Width="150">
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Red" Offset="0"/>
                    <GradientStop Color="#FFAC0000" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <Label x:Name="Label" Content="100%" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Consolas" FontSize="16" Padding="0" BorderThickness="0" Background="{x:Null}"/>
    </Grid>
</Window>
